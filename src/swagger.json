                                                "pathImage": "nr874512-hd9sjlKqo12.jpg",
                                                "genres": [
                                                    "ação",
                                                    "aventura"
                                                ],
                                                "streaming": [
                                                    "netflix"
                                                ],
                                                "totalEpisodes": null,
                                                "nextEpisode": null,
                                                "releaseDate": null,
                                                "status": "em andamento",
                                                "season": "outono",
                                                "weeklyDay": "quinta",
                                                "likes": 2000,
