                    "401": {
                        "description": "Token não foi fornecido ou inválido.",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "auth inválida":{
                                        "value":{
                                            "message": "Credentials not informed"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro no envio da requisição. Como enviar uma requisição com query params não suportadas",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "query params inválida": {
                                        "value":{
